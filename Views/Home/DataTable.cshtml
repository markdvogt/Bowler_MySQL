@{
    ViewData["Title"] = "Bowler Table";
}

@model List<Bowler>

<div class="row m-1 p-1">
    <div class="col-3">
        <p style="text-align:center"><vc:teams></vc:teams></p> <!-- May need to change location of view component-->
        
    </div>

    <div class="col-9">
        <h1>Bowlers</h1>

        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold">
                <tr>
                    <td>First Name</td>
                    <td>Middle Initial</td>
                    <td>Last Name</td>
                    <td>Address</td>
                    <td>City</td>
                    <td>State</td>
                    <td>Zip</td>
                    <td>Phone Number</td>
                    <td>Team Name</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var b in Model) 
                {
                <tr>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerMiddleInit</td>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                    <td>@b.Team.TeamName</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
                    <!-- Now the delete button on each row will be attached to a different FormId -->
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>
                </tr>

                }
            </tbody>
        </table>

        <!--This gives us the ability to add a new book to the database-->
        <NavLink class="btn btn-primary" href="/create">Create</NavLink>
    </div>
</div>
